<local:Visualizer x:Class="KPal.TemperatureView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KPal"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="5" Name="MainGrid" MouseEnter="MainGrid_MouseEnter" MouseLeave="MainGrid_MouseLeave">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Name="TemperatureGrid" Grid.Row="0" Grid.Column="0" Background="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"></RowDefinition>
            </Grid.RowDefinitions>
            <Viewbox Grid.Row="0" Grid.Column="0">
                <Label Grid.Row="0" Grid.Column="0" Foreground="#FF3800">1000</Label>
            </Viewbox>
            <Viewbox Grid.Row="0" Grid.Column="1">
                <Label Grid.Row="0" Grid.Column="0" Foreground="#FF8A12">2000</Label>
            </Viewbox>
            <Viewbox Grid.Row="0" Grid.Column="2">
                <Label Grid.Row="0" Grid.Column="0" Foreground="#FFB46B">3000</Label>
            </Viewbox>
            <Viewbox Grid.Row="0" Grid.Column="3">
                <Label Grid.Row="0" Grid.Column="0" Foreground="#FFD1A3">4000</Label>
            </Viewbox>
            <Viewbox Grid.Row="0" Grid.Column="4">
                <Label Grid.Row="0" Grid.Column="0" Foreground="#FFE4CE">5000</Label>
            </Viewbox>
            <Viewbox Grid.Row="0" Grid.Column="5">
                <Label Grid.Row="0" Grid.Column="0" Foreground="#FFF3EF">6000</Label>
            </Viewbox>
            <Viewbox Grid.Row="0" Grid.Column="6">
                <Label Grid.Row="0" Grid.Column="0" Foreground="#F5F3FF">7000</Label>
            </Viewbox>
            <Viewbox Grid.Row="0" Grid.Column="7">
                <Label Grid.Row="0" Grid.Column="0" Foreground="#E3E9FF">8000</Label>
            </Viewbox>
            <Viewbox Grid.Row="0" Grid.Column="8">
                <Label Grid.Row="0" Grid.Column="0" Foreground="#D6E1FF">9000</Label>
            </Viewbox>
            <Viewbox Grid.Row="0" Grid.Column="9">
                <Label Grid.Row="0" Grid.Column="0" Foreground="#CFDAFF">10000</Label>
            </Viewbox>
            <Viewbox Grid.Row="0" Grid.Column="10">
                <Label Grid.Row="0" Grid.Column="0" Foreground="#C8D5FF">11000</Label>
            </Viewbox>
            <Viewbox Grid.Row="0" Grid.Column="11">
                <Label Grid.Row="0" Grid.Column="0" Foreground="#C3D1FF">12000</Label>
            </Viewbox>
        </Grid>
    </Grid>
</local:Visualizer>
